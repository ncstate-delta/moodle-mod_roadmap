{{!
    @template mod_roadmap/configuration_learningobjective

    This template includes ajax functionality, so it cannot be shown in the template library.
}}
<div class="row-fluid form-group fitem learningobjective" data-id="{{ id }}">
    <span class="col-md-1">{{ number }})</span>
    <span class="col-md-7"><input class="learning-objective-name form-control " type="text" value="{{ name }}" /></span>
    <span class="col-md-4">
        <a class="learningobjective-up-control" href="" onclick="return false;">{{# pix }} t/up, core, Up {{/ pix }}</a>
        <a class="learningobjective-down-control" href="" onclick="return false;">{{# pix }} t/down, core, Down {{/ pix }}</a>
        <a class="learningobjective-delete-control" href="" onclick="return false;">{{# pix }} t/delete, core, Delete {{/ pix }}</a>
    </span>
</div>
