{{!
    @template mod_roadmap/configuration_phase

    This template includes ajax functionality, so it cannot be shown in the template library.

    Example context (json):
    {
        "id": "1",
        "index": "0",
        "title": "Cycle Title",
        "subtitle": "Cycle Sub Title",
        "pagelink": "http://ncsu.edu",
    	"steps": [{
    		"id": "1",
    		"rollovertext": "Hover Text",
    		"stepicon": "icon-1",
    		"pagelink": "http://ncsu.edu",
    		"completionmodules": "1,2,3",
    		"configuration": "jsonData"
    	}],
        "configuration": "jsonData"
    }
}}
<div data-cycleid="{{ id }}" data-cycleindex="{{ index }}" class="cycle-wrapper">
    <div class="row">
        <div class="cycle-controls">
            <a class="cycle-collapse-control" href="">{{# pix }} t/collapsed, moodle, Expand {{/ pix }}</a>
            <a class="cycle-up-control" href="" onclick="return false;">{{# pix }} t/up, core, Up {{/ pix }}</a>
            <a class="cycle-down-control" href="" onclick="return false;">{{# pix }} t/down, core, Down {{/ pix }}</a>
            <a class="cycle-delete-control" href="" onclick="return false;">{{# pix }} t/delete, core, Delete {{/ pix }}</a>
        </div>
        <div class="cycle-header-title">{{# title }} {{ title }} {{/ title }} {{^ title }} Untitled Cycle {{/ title }}</div>
    </div>
    <div class="hide cycle-container">
        <div class="form-group row fitem">
            <div class="col-md-3 col-form-label">Cycle Title</div>
            <div class="col-md-9 form-inline"><input class="cycle-title form-control" type="text" value="{{ title }}"></div>
        </div>
        <div class="form-group row fitem">
            <div class="col-md-3 col-form-label">Cycle Subtitle</div>
            <div class="col-md-9 form-inline"><input class="cycle-subtitle form-control" type="text" value="{{ subtitle }}"></div>
        </div>
        <div class="form-group row fitem">
            <div class="col-md-3 col-form-label">Link to Page</div>
            <div class="col-md-9 form-inline"><input class="cycle-pagelink form-control" type="text" value="{{ pagelink }}"></div>
        </div>
        <div class="form-group row fitem">
            <div class="col-md-3 col-form-label">Applicable learning objectives<br />(check all that apply):</div>
            <div class="col-md-9 form-inline">
                <ul class="chk-learning-objectives"></ul>
            </div>
        </div>
        <div class="cycle-steps-container">
            {{> mod_roadmap/configuration_steps }}
        </div>
        <div class="step-wrapper">
            <a class="add-cycle-step" href="#" >Add a new step</a>
        </div>
        <input class="cycle-configuration" type="hidden" value="{{ configuration }}">
    </div>
</div>