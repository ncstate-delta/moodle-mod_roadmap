{{!
    @template mod_roadmap/configuration_phase

    This template includes ajax functionality, so it cannot be shown in the template library.

    Example context (json):
    {
        "id": "1",
        "index": "0",
        "title": "Phase Title",
        "configuration": "jsonData",
        "cycles": [{
            "title": "Cycle Title",
            "pagelink": "http://ncsu.edu",
            "subtitle": "Cycle Subtitle",
            "steps": [{
                "id": "1",
                "rollovertext": "Hover Text",
                "stepicon": "icon-1",
                "pagelink": "http://ncsu.edu",
                "completionmodules": "1,2,3",
                "configuration": "jsonData"
            }],
            "learningobjectives": "1, 2, 3"
        }]
    }
}}
<div data-phaseid="{{ id }}" data-phaseindex="{{ index }}" data-phasecolor="{{ color }}" class="phase-wrapper">
    <div class="row">
        <div class="phase-controls">
            <a class="phase-collapse-control" href="">{{# pix }} t/collapsed, moodle, Expand {{/ pix }}</a>
            <a class="phase-up-control" href="" onclick="return false;">{{# pix }} t/up, core, Up {{/ pix }}</a>
            <a class="phase-down-control" href="" onclick="return false;">{{# pix }} t/down, core, Down {{/ pix }}</a>
            <a class="phase-delete-control" href="" onclick="return false;">{{# pix }} t/delete, core, Delete {{/ pix }}</a>
        </div>
        <div class="phase-header-title">{{# title }} {{ title }} {{/ title }} {{^ title }} Untitled Phase {{/ title }}</div>
    </div>
    <div class="phase-container hide" aria-expanded="false">
        <div class="form-group row fitem">
            <div class="col-md-1 col-form-label">Title</div>
            <div class="col-md-11 form-inline"><input class="phase-title form-control" type="text" value="{{ title }}"></div>
        </div>
        <div class="phase-cycles-container" class="">
            {{> mod_roadmap/configuration_cycles }}
        </div>
        <div class="cycle-wrapper">
            <a class="add-phase-cycle" href="#" >Add a new cycle</a>
        </div>
        <input class="phase-configuration" type="hidden" value="{{ configuration }}">
    </div>
</div>