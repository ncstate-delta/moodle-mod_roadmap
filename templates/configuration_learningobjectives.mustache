{{!
    @template mod_roadmap/configuration_learningobjectives

    This template includes ajax functionality, so it cannot be shown in the template library.

    Example context (json):
    {
        "learningobjectives": [{
            "id": "1",
            "number": "1",
            "name": "Course Learning Objective 1"
        }]
    }
}}
<div id="learningobjectives-container">
    <table class="generaltable fullwidth profilefield table-reboot">
        <thead>
        <tr>
            <th scope="col" class="col-8">{{#str}} courselearningobjectives, mod_roadmap{{/str}}</th>
            <th scope="col" class="col-3">{{#str}} edit {{/str}}</th>
        </tr>
        </thead>
        <tbody id="learningobjective-container">
        {{#learningobjectives}}
            {{> mod_roadmap/configuration_learningobjective }}
        {{/learningobjectives}}
        </tbody>
    </table>
    <a id="add-learning-objective" class="btn btn-secondary" href="#" >
        {{#str}} addnewclo, mod_roadmap {{/str}}
    </a>
</div>
