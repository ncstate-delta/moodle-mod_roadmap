}}
{{#str}} activityselectionhelp, mod_roadmap {{/str}}
<div id="activity-select-window">
    {{# sections }}
        <div class="section-header">
            {{ name }}
        </div>
        {{# coursemodules }}
            <div class="activity">
                <input type="checkbox"
                       data-coursemoduleid="{{ id }}"
                       data-completionexpecteddatetime="{{ completionexpecteddatetime }}"
                       data-completionexpectedreadable="{{ completionexpectedreadable }}"
                       data-name="{{ name }}">
                {{ name }}
            </div>
        {{/coursemodules}}
    {{/sections}}
</div>
{{#str}} expectedcompletionhelp, mod_roadmap {{/str}}
<select id="select-expected-activity-completion" class="form-control custom-select">
    <option value="0">{{#str}} noexpectedcompletion, mod_roadmap {{/str}}</option>
    <option value="-1">{{#str}} customexpectedcompletion, mod_roadmap {{/str}}</option>
</select>
<div id="customExpectedDateContainer" class="c1 d-flex">
    <div class="fdate_time_selector d-flex flex-wrap align-items-center">
        {{{customdatefields}}}
    </div>
</div>
<input type="hidden" id="step-id" name="step-id">