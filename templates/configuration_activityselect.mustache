{{!
    @template mod_roadmap/configuration_activityselect

    Example context (json):
    {
        "activities": [{
            "name": "Activity Name"
            "coursemoduleid": "1"
        }]
    }
}}
<p>Select one or more activities below that must be marked complete in order for this step to be completed.
Clicking on an item will toggle whether or not it is selected.</p>
<select id="step-activity-selector" name="activities" multiple>
{{# activities }}
    <option value="{{ coursemoduleid }}">{{ name }}</option>
{{/ activities }}
</select>
<div data-region="scale-buttons" class="scale-buttons">
    <input type="button" class="btn btn-secondary" data-action="save" value="Save"/>
    <input type="button" class="btn btn-secondary" data-action="cancel" value="Cancel"/>
</div>
